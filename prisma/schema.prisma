// Prisma Schema - Clean setup for Neon PostgreSQL
// Using Neon's built-in auth, so no User/Account/Session models needed

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// URL Shortener models only
model Link {
  id            String    @id @default(cuid())
  code          String    @unique
  targetUrl     String
  totalClicks   Int       @default(0)
  lastClickedAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
  userId        String?   // Optional - for user-owned links (Neon auth user ID)
  clicks        Click[]
}

model Click {
  id        String   @id @default(cuid())
  linkId    String
  ipAddress String?
  userAgent String?
  referer   String?
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
